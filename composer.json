{
    "require": {
        "php-di/php-di": "^6.3",
        "php-mqtt/client": "^1.1",
        "selective/basepath": "^2.1",
        "slim/php-view": "^3.1",
        "slim/psr7": "^1.5",
        "slim/slim": "4.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
